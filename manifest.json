{
  "name": "Canvas File Manager",
  "description": "Opens any PDF from Canvas in a new tab",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "Canvas-PDF-Viewer.html",
    "default_icon": "images/icon-128.png"
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*.edu/courses/*/files/*"
      ]
    }
  ],

  "background": {
    "service_worker": "scripts/service-worker.js"
  },

  "host_permissions": [
    "https://*.edu/courses/*/files/*"
  ],

  "permissions": [
    "tabs",
    "nativeMessaging",
    "downloads",
    "downloads.open",
    "webNavigation",
    "scripting"
  ]
}